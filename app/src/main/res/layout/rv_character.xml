<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:theme="@style/Theme.SWAPIChars.Item">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAppearance="@style/Text.ItemCharacters"
        android:theme="@style/Theme.SWAPIChars.TextView" />

    <ImageButton
        android:id="@+id/btnCheckFav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:backgroundTint="?attr/colorSecondary"
        android:contentDescription="@string/img_btn_content_description_favorite"
        app:tint="?attr/colorSecondaryVariant" />

</LinearLayout>